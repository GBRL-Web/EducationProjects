{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href='../../css/styles.css' type="text/css">
{% endblock %}

{% block body %}
	<h1 class="wbkg text-center">User</h1>
	<div class="d-flex justify-content-center ">
		<div class="container tabby">
			<table class="table">
				<tbody>
					<tr>
						<th>Username :</th>
						<td>{{ user.username }}</td>
					</tr>
					<tr>
						<th>Role :</th>
						{% if user.role == "ROLE_ADMIN" %}
						<td>Administrator</td>
						{% elseif user.role == "ROLE_USER" %}
						<td>Experienced Employee</td>
						{% elseif user.role == "ROLE_USER_NOVICE" %}
						<td>Inexperienced Employee</td>
						{% endif %}
					</tr>
				</tbody>
			</table>

			<a href="{{ path('user_index') }}" class="btn btn-success">Back to list</a>

			<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-info">Edit</a>

			{{ include('admin/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
